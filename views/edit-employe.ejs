<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
   <link rel="stylesheet" href="/stylesheets/employe.css">
  </head>

  <body>
    
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form action="/edit-employe/<%= item._id %>?_method=put" method="post" enctype="multipart/form-data" id="myForm" >
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" id="name" value="<%= item.name%>"  placeholder="Enter your  Name">
              <span id="nameError" class="error"></span><br>
            </div>
    
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" id="email"  value="<%= item.email%>"  placeholder="Enter your Email">
              <span id="emailError" class="error"></span><br>

            </div>
    
            <div class="form-group">
              <label for="phone">Phone No</label>
              <input type="number" class="form-control" name="phone" id="phone" value="<%= item.phone%>"  placeholder="Enter your Phone No">
              <span id="phoneError" class="error"></span><br>

            </div>
    
            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input type="date" class="form-control" name="dob" id="dob" value="<%= item.dob %>">
              <span id="dobError" class="error"></span><br>
          </div>
        
            <div class="form-group">
              <label for="designation">Designation</label>
              <input type="text" class="form-control" name="designation" value="<%= item.designation%>"  id="designation" placeholder="Enter your Designation">
              <span id="designationError" class="error"></span><br>
            </div>


            <div class="form-group">
              <label>Gender</label><br>
              <div class="form-check form-check-inline">
                  <input class="form-check-input gender" type="radio" name="gender" value="Male" id="male" <%= item.gender === 'Male' ? 'checked' : '' %>>
                  <label class="form-check-label" for="male">Male</label>
              </div>
              <div class="form-check form-check-inline">
                  <input class="form-check-input gender" type="radio" name="gender" value="Female" id="female" <%= item.gender === 'Female' ? 'checked' : '' %>>
                  <label class="form-check-label" for="female">Female</label>
              </div>
              <div class="form-check form-check-inline">
                  <input class="form-check-input gender" type="radio" name="gender" value="Other" id="other" <%= item.gender === 'Other' ? 'checked' : '' %>>
                  <label class="form-check-label" for="other">Other</label>
              </div><br>
              <span id="genderError" class="error"></span><br>
          </div>
        
          <div class="form-group">
            <label for="profilePhoto">Profile Photo</label>
            <input type="file" class="form-control" name="profilePhoto" id="profilePhoto">
            <span id="currentFileName">
                <img src="/upload/<%= item.profilePhoto ? item.profilePhoto : 'No file selected' %>" alt=""  style="height:50px;" class="my-3" >
            </span>
            <span id="profilePhotoError" class="error"></span><br>
        </div>

            <button type="submit" class="btn btn-primary" >SAVE</button>
          </form>
        </div>
      </div>
    </div>
    <script src="/javascripts/edit-employe.js"></script>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</html>